@import './base/fonts.styl'
@import './base/reset.styl'
@import './base/breakpoints.styl'
@import './mixins/flexbox'

@-ms-viewport
  width device-width

html
  box-sizing border-box
  -ms-overflow-style scrollbar

*,
*::before,
*::after
  box-sizing inherit

.container
  width 100%
  padding-right 15px
  padding-left 15px
  margin-right auto
  margin-left auto

@media (min-width: 576px)
  .container
    max-width 540px

@media (min-width: 768px)
  .container
    max-width 720px

@media (min-width: 992px)
  .container
    max-width 960px

@media (min-width: 1200px)
  .container
    max-width 1140px

.wrapper
  display flex
  min-height 100vh
  flex-direction column

.swiper-wrapper
  flex-direction row
main
  flex 1
h2
  font-size: 30px
  line-height normal
  font-family "Behrens Antiqua", sans-serif
  @media screen and (min-width: sm)
    font-size: 40px
p
  font-family "Noto Sans", sans-serif
  line-height 27px
  font-size 16px
  @media screen and (min-width: sm)
    line-height 35px
    font-size 20px

.plyr__control.plyr__control--overlaid svg
  display none

.plyr__control--overlaid:hover{
  background rgba(255, 255, 255, .2)!important
  background-size contain!important
  background-image url('data:image/svg+xml;base64,')!important
}
.plyr__control--overlaid{
  background none!important
}

.plyr__control--overlaid
  width 80px!important
  height 80px!important
  background-size contain!important
  background-repeat no-repeat!important
  background-image url('data:image/svg+xml;base64,')!important

.plyr__controls,
.plyr__volume
  display flex
  flex-direction row
  justify-content flex-start

// Print at hall of fame page
.hall-container
  width 100%
  margin 0 0 80px 0
  h2
    margin 0
  .swiper-button-next,
  .swiper-button-prev
    margin-top -80px
  &:last-child
    margin 0
  &_header
    flexbox(column, nowrap, space-between, flex-start, stretch)
    .link_full-list
      margin 10px 0 20px 0
    text-align center
    @media screen and (min-width: lg)
      flexbox(row, nowrap, space-between, flex-end, stretch)
      margin 0 0 20px 0


.link_full-list
  flexbox(row, nowrap, flex-start, center, stretch)
  &_text
    border-bottom 2px solid #E8D35F
    font-family 'Noto Sans', sans-serif
    font-style normal
    font-weight normal
    font-size 18px
    line-height 25px
    color #000
  &_icon
    width 14px
    height 11px
    margin 0 0 0 8px
    background-image url('data:image/svg+xml;base64,')
  &:active
    .link_full-list_text
      transition all .2s ease
      color #E0BF00
      border-bottom 2px solid #E0BF00
    .link_full-list_icon
      transition all .2s ease
      background-image: url('data:image/svg+xml;base64,')
  &:hover
    .link_full-list_text
      transition all .2s ease
      color #E8D35F
    .link_full-list_icon
      transition all .2s ease
      background-image url('data:image/svg+xml;base64,')

